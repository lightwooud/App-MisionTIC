<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_notification"
            android:title="Notificaciones"
            android:summary="Autorizar las notificaciones"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_sonidoNotification"
            android:title="Sonido Notificaciones"
            android:summary="Activar sonido de notificaciones"/>
    </PreferenceCategory>

</PreferenceScreen>